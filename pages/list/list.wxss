/* pages/list/list.wxss */
.searchWrap {
    height: 60rpx;
    padding: 10rpx;
    background-color: dodgerblue;
    font-size: 35rpx;
}

.butt {
    margin-left: 10%;
    width: 80%;
    height: 100%;
    border-radius: 55rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: #fff;
}

.bottom {
    position: absolute;
    top: 100rpx;
    width: 90%;
    margin: 0 5%;
    display: flex;
    flex-direction: row;
    /* align-items: center; */
}

.bottom1 {
    position: absolute;
    top: 200rpx;
    width: 90%;
    margin: 0 5%;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.leftButton {
    margin-left: 20%;
    position: absolute;
    color: black;
    border: 1px solid black;
}

.rightButton {
    margin-right: 20%;
    position: absolute;
    right: 0%;
    color: black;
    border: 1px solid black;
}

.listTableWrap {
    position: absolute;
    width: 790rpx;
    height: 1500rpx;
    left: 50%;
    margin-left: -395rpx;
    top: 200rpx;
    overflow-y: scroll;
    /*显示滚动条*/
    overflow-x: hidden;
    /*不显示滚动条*/
}

.table {
    border: 1px solid #dadada;
    border-right: 0;
    border-bottom: 0;
    /* height:20%; */
    width: 98%;
    margin-left: 1%;
}

.tr_titleBox {
    display: flex;
    flex-direction: row;
}

.tr_title {
    width: 70%;
    margin-left: 10%;
    font-size: 35rpx;
    color: black;
    justify-content: left;
    text-align: left;
}

.tr_like {
    margin-left: 4%;
    margin-top: 1%;
    width: 8%;
}

.tr_like image {
    width: 100%;
}

.tr_synopsis {
    font-size: 35rpx;
    margin-left: 10%;
    width: 80%;
    height: 135rpx;
    color: gray;
    display: -webkit-box;
    word-wrap: break-word;
    word-break: break-all;
    justify-content: left;
    text-align: left;
    text-overflow: ellipsis;
    overflow: hidden;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 3;
}
.tr_platformBox{
    display: flex;
    flex-direction: row;
}

.tr_platform {
    width: 50%;
    margin-left: 10%;
    color: green;
    display: flex;
    justify-content: left;
    text-align: center;
}

.tr_click {
    width: 30%;
    display: flex;
    justify-content: right;
    text-align: right;
}
.tr_writeBox{
    height: 7rpx;
}